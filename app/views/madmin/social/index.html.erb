<div class="max-w-3xl mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">소셜 미디어 연동</h1>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">외부 소셜 미디어 플랫폼과의 OAuth 인증을 관리합니다.</p>
  </div>

  <!-- X.com (Twitter) OAuth -->
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700 p-5">
    <div class="flex items-start justify-between">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
          <svg class="w-5 h-5 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">X.com (Twitter)</h2>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-0.5">트윗 읽기/쓰기 및 사용자 정보 접근</p>
        </div>
      </div>

      <% if @xcom_oauth&.value&.dig("access_token") %>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400">
          <svg class="w-3.5 h-3.5 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          연결됨
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400">
          연결 안됨
        </span>
      <% end %>
    </div>

    <% if @xcom_oauth&.value&.dig("access_token") %>
      <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
        <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">인증 정보</h3>
          <dl class="space-y-2.5">
            <div class="flex items-start gap-3">
              <dt class="text-sm text-gray-500 dark:text-gray-400 w-24 flex-shrink-0">Access Token</dt>
              <dd class="flex-1 font-mono text-xs text-gray-900 dark:text-white break-all bg-white dark:bg-gray-800 px-2 py-1 rounded border border-gray-200 dark:border-gray-700">
                <%= @xcom_oauth.value["access_token"][0..15] %>...
              </dd>
            </div>
            <% if @xcom_oauth.value["expires_at"] %>
              <div class="flex items-start gap-3">
                <dt class="text-sm text-gray-500 dark:text-gray-400 w-24 flex-shrink-0">만료 시간</dt>
                <dd class="flex-1 text-sm text-gray-900 dark:text-white">
                  <%= Time.at(@xcom_oauth.value["expires_at"]).in_time_zone("Asia/Seoul").strftime("%Y-%m-%d %H:%M") %>
                </dd>
              </div>
            <% end %>
            <% if @xcom_oauth.value["token_created_at"] %>
              <div class="flex items-start gap-3">
                <dt class="text-sm text-gray-500 dark:text-gray-400 w-24 flex-shrink-0">생성 시간</dt>
                <dd class="flex-1 text-sm text-gray-900 dark:text-white">
                  <%= Time.at(@xcom_oauth.value["token_created_at"]).in_time_zone("Asia/Seoul").strftime("%Y-%m-%d %H:%M") %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>

        <div class="mt-3">
          <%= link_to madmin_social_xcom_authorize_path,
              class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600" do %>
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            재인증
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
        <%= link_to madmin_social_xcom_authorize_path,
            class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          X.com 연동하기
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- 추가 소셜 플랫폼 연동 영역 (향후 확장) -->
